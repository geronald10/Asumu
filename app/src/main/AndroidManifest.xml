<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.ridhoperdana.asumu">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo_bukahobi"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/logo_bukahobi"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".halaman_home.HomeActivity" />
        <activity
            android:name=".halaman_login.LoginSplashScreenActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@style/FullscreenTheme"></activity>
        <activity android:name=".halaman_login.LoginActivity" />
        <activity
            android:name=".SearchActivity"
            android:label="Cari Komunitas" />
        <activity
            android:name=".MessageActivity"
            android:label="Daftar Pesan" />
        <activity android:name=".BaseActivity" />
        <activity
            android:name=".ProfilActivity"
            android:label="Profil Pengguna" />
        <activity android:name=".HistoryDetailActivity"></activity>
    </application>

</manifest>